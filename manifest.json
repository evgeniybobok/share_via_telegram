{
  "manifest_version": 2,
  "name": "Share via Telegram",
  "version": "1.15.3",
  "description": "Allows to share current page via Telegram messenger in just one click",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "Share Page via Telegram"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
   "permissions": [
       "contextMenus",
       "tabs"
   ]
}